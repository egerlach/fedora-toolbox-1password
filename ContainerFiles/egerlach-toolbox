FROM ghcr.io/ublue-os/fedora-toolbox:latest

LABEL com.github.containers.toolbox="true" \
      usage="egerlach's toolbox" \
      maintainer="eric@gerlach.ca"

COPY ../files/1password.repo /etc/yum.repos.d/
COPY ../scripts/egerlach-toolbox.sh /
COPY ../scripts/distrobox-shims.sh /
COPY ../packages/egerlach-toolbox.packages /

# Run the setup scripts
RUN chmod +x fedora-example.sh distrobox-shims.sh && /fedora-example.sh
RUN rm /fedora-example.sh /distrobox-shims.sh /fedora-example.packages
